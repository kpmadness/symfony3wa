
{% for product in products %}
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="{{ asset(product.cover.getWebPath("large")) }}" alt="{{ product.title | lower | replace ({ 'é' : 'e' }) }}" width="320" height="150">
        <div class="caption">
            <h4 class="pull-right">{{ product.price }} €</h4>
            <h4><a href="#">{{ product.title }}</a>
            </h4>
            <p>{{ product.description }}<a target="_blank" href="http://www.bootsnipp.com">{{ product.title | lower }}</a>.</p>
        </div>
        <div class="ratings">
            <p class="pull-right">15 reviews</p>
            <p>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
            </p>
        </div>
    </div>
</div>
{%  endfor %}