{% extends "TroiswaFrontBundle::layout.html.twig" %}

{% block content %}
    <ul>
        <li>
            {% if (product.cover != null) %}
                <img src="{{ asset(product.cover.getWebPath("small")) }}" alt="{{ product.cover.getAlt() }}" width="100" height="80"/>
            {% else %}
                <img src="{{ asset("upload/products/no-image.png") }}" alt="no-image" width="80" height="80"/>
            {% endif %}
        </li>
        <li>Produit : {{ product.title }}</li>
        <li>Description du produit : {{ product.description }}</li>
        <li>Quantit√© : {{ product.quantity }}</li>
        <li>Prix : {{ product.price }} euros</li>
    </ul>

    <p>
        <a href="{{ path('troiswa_front_homepage') }}" class="btn btn-success">Retour</a>
    </p>

    <form method="POST" action="{{ path('troiswa_front_cart_add', {id:product.id}) }}">
        <input type="number" value="1" name="qty">
        <button>Ajouter au panier</button>
    </form>
{% endblock %}
