{% extends "::base.html.twig" %}

{% set routePath=app.request.attributes.get("_route") %}

{% block title %}
    SB Admin - Bootstrap Admin Template
{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="{{ asset("assets/css/bootstrap.min.css", absolute=true) }}">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset("assets/css/sb-admin.css", absolute=true) }}">
    <!-- Custom Fonts -->
    <link rel="stylesheet" type="text/css" href="{{ asset("assets/font-awesome/css/font-awesome.min.css", absolute=true) }}">
{% endblock %}

{% block body %}
<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        {% include 'TroiswaBackBundle:Globals:header.html.twig' %}

        {% include 'TroiswaBackBundle:Globals:sidebar.html.twig' %}

    </nav>

    <div id="page-wrapper">

        <div class="container-fluid">


            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        {% block h1 %}
                        Dashboard <small>Statistics Overview</small>
                        {% endblock %}
                    </h1>
                    <ol class="breadcrumb">
                        {% block breadcrumb %}
                            <li class="active">
                                <a href="{{ path('troiswa_back_administration') }}">
                                    <i class="fa fa-dashboard"></i> Dashboard
                                </a>
                            </li>
                        {% endblock %}
                    </ol>
                </div>
            </div>


            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="fa fa-info-circle"></i>  {{ flashMessage }}
                        </div>
                    </div>
                </div>
            {% endfor %}
            <!-- /.row -->

            {% block content %}
            {% endblock %}

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
{% endblock %}



{% block javascript %}
    <!-- jQuery -->
    <script src="{{ asset("assets/js/jquery.js", absolute=true) }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset("assets/js/bootstrap.min.js", absolute=true) }}"></script>
{% endblock %}


