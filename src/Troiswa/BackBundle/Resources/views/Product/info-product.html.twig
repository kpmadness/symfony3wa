{% extends "TroiswaBackBundle::layout-admin.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("assets/css/plugins/morris.css", absolute=true) }}">
{% endblock %}

{% block h1 %}
    Gestion des Produits
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <i class="fa fa-dashboard"></i>  Information du produit : {{ product.title }}
    </li>
{% endblock %}

{% block sidebar_menu %}
    <li class="active">
        {% if routePath!="troiswa_back_administration" %}
            <a href="{{ path('troiswa_back_administration') }}">
                <i class="fa fa-fw fa-dashboard"></i> Accueil
            </a>
        {% else %}
            <i class="fa fa-fw fa-dashboard"></i> Accueil
        {% endif %}
    </li>
    <li class="active">
        <a href="{{ path('troiswa_back_contact') }}">
            <i class="fa fa-fw fa-dashboard"></i> Mes Produits
        </a>
    </li>
{% endblock %}

{% block content %}
    <ul>
        <li>Produit : {{ product.title }}</li>
        <li>Description du produit : {{ product.description }}</li>
        <li>Quantit√© : {{ product.quantity }}</li>
        <li>Prix : {{ product.price }} euros</li>
    </ul>

    <p>
        <a href="{{ path('troiswa_back_product') }}" class="btn btn-success">Retour</a>
    </p>
{% endblock %}
