{% extends "TroiswaBackBundle::layout-admin.html.twig" %}

{# surchage au sein d'in template #}
{% form_theme formContact _self %}

{#
{%- block form_widget -%}
    input en mode text
{%- endblock form_widget -%}
#}
{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <span>Surchage message d'erreur depuis le template contact</span>
        <ul class="alert alert-danger">
            {%- for error in errors -%}
                <li>{{ error.message }}  : message en rouge</li>
            {%- endfor -%}
        </ul>
    {%- endif -%}
{%- endblock form_errors -%}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("assets/css/plugins/morris.css", absolute=true) }}">
{% endblock %}

{% block h1 %}
    Contact
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        <i class="fa fa-dashboard"></i> Contact
    </li>
{% endblock %}

{% block sidebar_menu %}
    <li class="active">
        {% if routePath!="troiswa_back_administration" %}
        <a href="{{ path('troiswa_back_administration') }}">
            <i class="fa fa-fw fa-dashboard"></i> Accueil
        </a>
        {% else %}
            <i class="fa fa-fw fa-dashboard"></i> Accueil
        {% endif %}
    </li>
    <li class="active">
        <a href="{{ path('troiswa_back_contact') }}">
            <i class="fa fa-fw fa-dashboard"></i> Contact
        </a>
    </li>
{% endblock %}

{% block content %}

    {{ form_start(formContact) }}

        <div class="form-group">
            {{ form_label(formContact.firstname,"Pr√©nom", {"label_attr":{class : 'form-label'}}) }}
            {{ form_errors(formContact.firstname) }}
            {{ form_widget(formContact.firstname, {attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(formContact.lastname,"Nom", {"label_attr":{class : 'form-label'}}) }}
            {{ form_errors(formContact.lastname) }}
            {{ form_widget(formContact.lastname, {attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(formContact.objet,"Sujet", {"label_attr":{class : 'form-label'}}) }}
            {{ form_errors(formContact.objet) }}

            {#<label class="radio-inline">#}
            {#{{ form_widget(formContact.objet) }}#}
            {#{% for radio in formContact.objet.children %}#}
                {#{{ form_widget(formContact.objet) }}#}
                {#{{ radio.vars.label }}#}
            {#{% endfor %}#}
            {#</label>#}
            {{ form_widget(formContact.objet) }}
        </div>
        <div class="form-group">
            {{ form_label(formContact.email,"E-Mail", {"label_attr":{class : 'form-label'}}) }}
            {{ form_errors(formContact.email) }}
            {{ form_widget(formContact.email, {attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(formContact.message,"Message", {"label_attr":{class : 'form-label'}}) }}
            {{ form_errors(formContact.message) }}
            {{ form_widget(formContact.message, {attr: {class:'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(formContact.submit, {label: "Envoyer"}) }}
        </div>

    {{ form_end(formContact) }}

{% endblock %}

{% block javascript %}
    {{ parent() }}
{% endblock %}